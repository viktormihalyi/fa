Shader.source[document.currentScript.src.split('js/shaders/')[1]] = `#version 300 es
    in vec3 vertexPosition;
    in vec3 vertexColor;
    in vec3 vertexNormal;
    in vec2 vertexTexCoord;

    uniform mat4 V;
    uniform mat4 P;

    out vec3 color;
    out vec3 normal;
    out vec2 uv;

    void main(void) {
        gl_Position = vec4(vertexPosition, 1) * V * P;
        color = vertexColor;
        normal = vertexNormal;
        uv = vertexTexCoord;
    }
`;